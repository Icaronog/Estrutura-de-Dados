#include <stdio.h>


void verificarNum(int num){

    if(num > 0)
        printf("Verdadeiro");
    else if(num < 0)
        printf("Falso");
    else
        printf("Voce precisa informar um numero valido");

}

int main (){

    int num;

    printf("Digite um Numero: ");
    scanf("%d", &num);

    verificarNum(num);

}
